<div id="sessions-loader">
    <div class="progressbar-fliplearning">
        <div class="indeterminate"></div>
    </div>
</div>

<v-app id="grades" class="fliplearning">
    <v-main>
        <pageheader :pagetitle="strings.title" :helptitle="strings.helplabel" :exitbutton="strings.exitbutton"
                    :helpcontents="get_help_content()" :groups="groups" :courseid="courseid" :userid="userid"></pageheader>
        <v-container pa-8>
            <v-row v-if="loading">
                <span class="mb-1 mt-5 body-1" v-text="strings.graph_generating"></span>
                <v-progress-linear indeterminate color="cyan"></v-progress-linear>
            </v-row>
            <div v-else>
                <v-alert v-if="errors.length > 0" dense outlined type="error" v-text="strings.api_error_network"></v-alert>

                <v-row>
                    <v-col sm="12">
                        <v-select
                                attach
                                :items="grades.categories"
                                item-text="name"
                                item-value="items"
                                label="CategorÃ­a"
                                v-model="default_category"
                                v-on:change="changeCategory"
                                solo
                        ></v-select>
                    </v-col>
                </v-row>

                <v-row>
                    <v-col sm="12">
                        <chart :container="'items_average'" :chart="build_chart_items_average()"></chart>
                    </v-col>
                </v-row>

                <v-row>
                    <v-col sm="12" md="6">
                        <chart :container="'item_detail'" :chart="build_chart_item_grade_detail()"></chart>
                    </v-col>
                </v-row>

            </div>


        </v-container>
    </v-main>
</v-app>