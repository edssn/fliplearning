<div id="student_sessions_loader">
    <div class="progressbar-fliplearning">
        <div class="indeterminate"></div>
    </div>
</div>

<v-app id="student_sessions" class="fliplearning">
    <v-main>
        <pageheader
                :pagetitle="strings.title"
                :helptitle="strings.helplabel"
                :exitbutton="strings.exitbutton"
                :helpcontents="get_help_content()"
                :groups="groups"
                :courseid="courseid"
                :userid="userid"
                :section="pluginSectionName"
        ></pageheader>

        <v-container pa-8>
            <v-row v-if="loading">
                <span class="mb-1 mt-5 body-1" v-text="strings.graph_generating"></span>
                <v-progress-linear indeterminate color="cyan"></v-progress-linear>
            </v-row>
            <div v-else>
                <v-alert v-if="errors.length > 0" dense outlined type="error" v-text="strings.api_error_network"></v-alert>

                <pagination
                        :pages="pages" :name="strings.pagination_name" :nameseparator="strings.pagination_separator"
                        @changepage="update_interactions" :title="strings.pagination_title"></pagination>


                <v-row>
                    <v-col cols="12" md="6">
                        <v-card elevation="2">
                            <v-card-title class="justify-center">
                                <h5 v-text="strings.inverted_time_chart_title"></h5>
                            </v-card-title>
                            <v-card-text>
                                <chart
                                        :container="inverted_time_chart"
                                        :chart="build_inverted_time_chart()"
                                        :lang="strings.chart"
                                ></chart>
                                <span class="caption" @click="openChartHelp(inverted_time_chart)">
                                <v-icon small v-text="'mdi-help-circle-outline'"></v-icon>
                                <span v-text="strings.about"></span>
                            </span>
                            </v-card-text>
                        </v-card>
                    </v-col>

                    <v-col cols="12" md="6">
                        <v-card elevation="2">
                            <v-card-title class="justify-center">
                                <h5 v-text="strings.hours_sessions_title"></h5>
                            </v-card-title>
                            <v-card-text>
                                <chart
                                        :container="sessions_by_hours_and_days_chart"
                                        :chart="build_sessions_by_hours_and_days_chart()"
                                        :lang="strings.chart"
                                ></chart>
                                <span class="caption" @click="openChartHelp(sessions_by_hours_and_days_chart)">
                                <v-icon small v-text="'mdi-help-circle-outline'"></v-icon>
                                <span v-text="strings.about"></span>
                            </span>
                            </v-card-text>
                        </v-card>
                    </v-col>
                </v-row>

                <v-row>
                    <v-col cols="12">
                        <v-card elevation="2">
                            <v-card-title class="justify-center">
                                <h5 v-text="strings.resource_access_title"></h5>
                            </v-card-title>
                            <v-card-subtitle class="text-center">
                                <v-row class="justify-center">
                                    <v-col cols="12" xs="10" md="4">
                                        <span v-text="strings.week_progress_title" class="fliplearning-sub-title"></span>
                                    </v-col>
                                    <v-col cols="12" xs="10" md="7" class="mx-3">
                                        <v-progress-linear
                                                :value="week_progress"
                                                height="25"
                                                color="#118AB2"
                                                rounded
                                        >
                                            <strong class="white--text" v-text="get_progress_percentage()"></strong>
                                        </v-progress-linear>
                                    </v-col>
                                </v-row>
                            </v-card-subtitle>
                            <v-card-text>
                                <chart
                                        :container="resources_access_chart"
                                        :chart="build_resources_access_chart()"
                                        :lang="strings.chart"
                                ></chart>
                                <span class="caption" @click="openChartHelp(resources_access_chart)">
                                <v-icon small v-text="'mdi-help-circle-outline'"></v-icon>
                                <span v-text="strings.about"></span>
                            </span>
                            </v-card-text>
                        </v-card>
                    </v-col>
                </v-row>

                <v-row justify="center">
                    <v-col sm="12">
                        <modulesform
                                :dialog="modules_dialog"
                                :sections="sections"
                                :strings="strings.modules_strings"
                                @update_dialog="update_modules_dialog"
                        ></modulesform>
                    </v-col>
                </v-row>

                <v-row justify="center">
                    <v-col sm="12">
                        <helpdialog
                                :dialog="help_dialog"
                                :title="strings.helplabel"
                                :contents="help_contents"
                                :exit="strings.exitbutton"
                                @update_dialog="update_help_dialog"
                        ></helpdialog>
                    </v-col>
                </v-row>

                <v-row class="justify-center">
                    <span v-text="get_timezone()"></span>
                </v-row>
            </div>

        </v-container>
    </v-main>
</v-app>